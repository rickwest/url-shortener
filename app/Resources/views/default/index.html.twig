{% extends 'base.html.twig' %}

{% block body %}

{% include ':default/partials:header.html.twig' %}

<div class="wrapper">
    <div class="parallax">
        <div class="parallax-background">
            <img class="parallax-background-image" src="{{ asset('assets/img/parallax-night-sky-image.jpg') }}">
        </div>
        <div class= "container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="description text-center">
                        <h2 id="title">Bigger isn't always better.</h2>
                        <div class="description-subtitle">
                            <h5 id="subtitle">Enter your long link and let us generate a short youRL for you instead!</h5>
                        </div>
                    </div>
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form) }}
                    <div class="input-group input-group-lg">
                        {{ form_widget(form.url) }}
                        <span class="input-group-btn">
                            <button id="submitUrl" type="submit" name="submitUrl" class="btn btn-primary btn-fill">Shorten</button>
                            <button id="clearUrl" type="button" name="clearUrl" class="btn btn-default btn-fill hidden" data-toggle="tooltip" data-placement="bottom" title="Clear and shorten another"><i class="fa fa-times"></i></button>
                            <button id="copyShortUrl" type="button" name="copyShortUrl" class="btn btn-info btn-fill hidden" data-toggle="tooltip" data-placement="bottom" title="Copy to clipboard">Copy</button>
                        </span>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% include ':default/partials:featuresBlock.html.twig' %}
    {% include ':default/partials:aboutBlock.html.twig' %}
    {% include ':default/partials:footer.html.twig' %}
</div>

{% endblock %}